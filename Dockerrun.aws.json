{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions":[
    {
      "name": "eureka-server",
      "image": "bgpark82/game-eureka-server:latest",
      "hostname": "eureka-server",
      "memory":128,
      "memoryReservation": 128,
      "essential": false,
      "portMappings":[
        {
          "hostPort": 8761,
          "containerPort":8761
        }
      ]
    },
    {
      "name": "gateway",
      "image": "bgpark82/game-gateway:latest",
      "hostname": "gateway",
      "essential": true,
      "memory":128,
      "memoryReservation": 128,
      "portMappings":[
        {
          "hostPort": 80,
          "containerPort":8000
        }
      ],
      "link": ["multiplication", "user"]
    },
    {
      "name": "multiplication",
      "image": "bgpark82/game-multiplication:latest",
      "hostname": "multiplication",
      "memory":128,
      "memoryReservation": 128,
      "essential": false
    },
    {
      "name": "user",
      "image": "bgpark82/game-user:latest",
      "hostname": "user",
      "memory":128,
      "memoryReservation": 128,
      "essential": false
    }
  ]
}